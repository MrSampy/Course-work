
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <script>
    const canvasId = ["canvas1","canvas2","canvas3","canvas4"]
    function drawRect(canvasId, x, y, red, green, blue, lenOfPix, num) {
        let ctx = canvasId[num];
        if (!ctx) return;
        ctx.fillStyle = `rgb(${red},${green},${blue})`;
        ctx.fillRect(x, y, lenOfPix, lenOfPix);
    }
      
    function getImage(canvas){
        let imageData = canvas.toDataURL();
        let image = new Image();
        image.src = imageData;
        return image;
    }
    
    function saveImage(image,name) {
        let link = document.createElement("a");
    
        link.setAttribute("href", image.src);
        link.setAttribute("download", name);
        link.click();
    }
    
    function saveCanvasAsImageFile(num,name){
        let image = getImage(document.getElementById(canvasId[num]));
        saveImage(image,name);
    }
    </script> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Course_work.styles.css" asp-append-version="true"/>
</head>

<body>
<h1>@ViewData["Title"]</h1>
<br />
@RenderBody()
</body>
</html>
